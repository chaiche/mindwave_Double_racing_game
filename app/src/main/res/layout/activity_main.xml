<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.neurosky.mindwavemobiledemo.MainActivity"
    android:background="#000000">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/main_frlvir">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:weightSum="1">

                <ImageView
                    android:layout_width="63dp"
                    android:layout_height="61dp"
                    android:id="@+id/imageView3"
                    android:background="@drawable/car" />

                <ImageView
                    android:layout_width="47dp"
                    android:layout_height="59dp"
                    android:id="@+id/imageView4"
                    android:background="@drawable/runcar" />

                <ImageView
                    android:layout_width="39dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageView5"
                    android:background="@drawable/lala"
                    android:layout_weight="0.09" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手機賽車遊戲"
                android:id="@+id/textView7"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:textColor="#ffffff"
                android:textStyle="bold" />
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/main_frlreal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:id="@+id/imageView2"
                android:layout_gravity="center"
                android:background="@mipmap/ic_realcar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="實體遙控車"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
